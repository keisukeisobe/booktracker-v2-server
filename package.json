{
  "name": "express-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "mocha --require test/setup.js",
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "premigrate:production": "set SSL=true",
    "migrate": "postgrator --config postgrator-config.js",
    "migrate:test": "set NODE_ENV=test&& npm run migrate",
    "migrate:production": "set DATABASE_URL=$(heroku config: get DATABASE_URL)&& npm run migrate",
    "predeploy": "npm audit && npm run migrate:production",
    "deploy": "git push heroku main"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.95.4",
    "mkdirp": "^1.0.4",
    "morgan": "^1.9.1",
    "pg": "^8.5.1",
    "postgrator-cli": "^3.2.0",
    "xss": "^1.0.8"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^6.2.3",
    "nodemon": "^1.19.4",
    "supertest": "^4.0.2"
  }
}
